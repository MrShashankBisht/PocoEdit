<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
<!--        <OnClick motion:targetId="@+id/preview_info_btn" motion:clickAction="toggle" />-->
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/preview_image_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/preview_info_btn"
            motion:layout_constraintEnd_toStartOf="@+id/preview_del_btn"
            motion:layout_constraintStart_toEndOf="@+id/preview_edit_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/preview_image_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/preview_info_btn"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/preview_info_btn"
            motion:layout_constraintEnd_toStartOf="@+id/preview_del_btn"
            motion:layout_constraintStart_toEndOf="@+id/preview_edit_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp" />
    </ConstraintSet>
</MotionScene>